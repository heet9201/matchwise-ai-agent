# Groq API Key for LLM integration
GROQ_API_KEY=your_groq_api_key_here

# Multiple API Keys for rotation (optional)
GROQ_API_KEY_1=your_first_api_key_here
GROQ_API_KEY_2=your_second_api_key_here
GROQ_API_KEY_3=your_third_api_key_here

# Server Configuration
PORT=8000
HOST=0.0.0.0

# CORS Settings (for production, replace with actual frontend URL)
FRONTEND_URL=http://localhost:3000

# Keep-Alive Configuration
# Enable/disable periodic pings to prevent server shutdown on free hosting platforms
KEEP_ALIVE_ENABLED=true

# Frequency in minutes for keep-alive pings
KEEP_ALIVE_FREQUENCY_MINUTES=5

# Backend URL to ping (your FastAPI server)
# For local development: http://localhost:8000
# For production: https://your-app.onrender.com or https://your-app.herokuapp.com
KEEP_ALIVE_BACKEND_URL=http://localhost:8000

# Frontend URL to ping (your React app)
# For local development: http://localhost:3000
# For production: https://your-frontend.onrender.com or https://your-frontend.vercel.app
KEEP_ALIVE_FRONTEND_URL=http://localhost:3000
